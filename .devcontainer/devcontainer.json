// .devcontainer/devcontainer.json
{
  "name": "BPS Leader",
  "dockerComposeFile": [
    "../Embedded-Sharepoint/docker-compose.yml"
  ],

  "service": "dev",
  "workspaceFolder": "/workdir",
  "shutdownAction": "stopCompose",
  "initializeCommand": "../Embedded-Sharepoint/scripts/dockerInitialize.sh ${localWorkspaceFolder}",  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "GitHub.vscode-pull-request-github",
        "ms-vscode.makefile-tools",
        "thecreativedodo.usbip-connect",
        "eamodio.gitlens"
      ]
    }
  },
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder} && git config --global --add safe.directory ${containerWorkspaceFolder}/Embedded-Sharepoint"
}

