// .devcontainer/devcontainer.json
{
  "name": "BPS Leader",
  "dockerComposeFile": [
    "../Embedded-Sharepoint/docker-compose.yml"
  ],

  "service": "dev",
  "workspaceFolder": "/workdir",
  "shutdownAction": "stopCompose",
  "initializeCommand": "/bin/bash -c 'echo \"WORKDIR_MOUNT=${localWorkspaceFolder}\nREMOTE_USER=$USER\nREMOTE_UID=$(id -u)\nREMOTE_GID=$(id -g)\" > Embedded-Sharepoint/.env && docker compose -f Embedded-Sharepoint/docker-compose.yml down'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "GitHub.vscode-pull-request-github",
        "ms-vscode.makefile-tools",
        "thecreativedodo.usbip-connect",
        "eamodio.gitlens"
      ]
    }
  },
  "postCreateCommand": "[ -f ~/.ssh/config ] && chmod 600 ~/.ssh/config && ssh -T git@github.com || true"
}

